{
  "name": "@openbotauth/verifier-client",
  "version": "0.1.0",
  "description": "Client library for verifying OpenBotAuth (RFC 9421) signed HTTP requests",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "openbotauth",
    "rfc9421",
    "http-signatures",
    "verification",
    "express",
    "nextjs",
    "middleware"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "express": "^4.x || ^5.x"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  }
}
